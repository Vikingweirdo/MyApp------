<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.asus.myapp">


    <uses-sdk android:minSdkVersion="21"></uses-sdk>
    <uses-permission android:name="android.permission.VIBRATE"></uses-permission>

    <uses-permission android:name="android.permission.INTERNET" />

    <android:uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <android:uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.READ_CALENDAR"/>
    <uses-permission android:name="android.permission.WRITE_CALENDAR"/>
    <application
        android:allowBackup="true"
        android:icon="@drawable/icon2"
        android:label="匿名课堂"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:launchMode="singleTask"></activity>
        <activity android:name=".UserActivity"
            android:launchMode="singleTask"/>
        <activity android:name=".Login"
            android:launchMode="singleTask"/>
        <activity android:name=".RegisterStudent"
            android:launchMode="singleTask"/>
        <activity android:name=".RegisterTeacher"
            android:launchMode="singleTask"/>
        <activity android:name=".Commit"
            android:launchMode="singleTask"/>
        <activity android:name=".ClassnumberActivity"
            android:launchMode="singleTask"></activity>
        <activity android:name=".UserTeacherActivity" />
        <activity android:name=".CommitTeacher"
            android:launchMode="singleTask"></activity>
        <activity android:name=".TalkActivity"
            android:launchMode="singleTask"></activity>
        <activity android:name=".Welcome"
            android:launchMode="singleTask"
            >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <service android:name=".MyService" android:enabled="true"></service>
        <service android:name=".MyService2" android:enabled="true"></service>
    </application>

</manifest>