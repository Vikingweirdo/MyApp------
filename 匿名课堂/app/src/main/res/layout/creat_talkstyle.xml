<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/myalter"
    android:layout_width="fill_parent"
    android:layout_height="500px"
    android:orientation="vertical"
    android:padding="15px"
    android:layout_weight="4"
    tools:context="com.example.asus.myapp.MainActivity">

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="15px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/talknumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/talkTitle" />
    </LinearLayout>

    <EditText
        android:id="@+id/inputalKey"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10px"
        android:layout_weight="1"
        android:hint="会话名称"
        android:textColor="@color/editBackground"
        android:textSize="50px" />



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10px"
        android:orientation="horizontal">
        <Button
            android:layout_weight="1"
            android:id="@+id/talksure"
            android:text="确定"
            android:padding="15px"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        <Button
            android:layout_weight="1"
            android:id="@+id/talkcancel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="15px"
            android:text="取消" />

    </LinearLayout>
</LinearLayout>
